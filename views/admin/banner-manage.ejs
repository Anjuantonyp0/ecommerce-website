<%- include('../partials/admin/adminHeader') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Added Banners</title>

    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        h1 {
            margin-bottom: 30px;
            color: #343a40;
        }
        .container { max-width: 1648px; margin: 0 auto; }

        .banner-list {
            list-style: none;
            padding-left: 0;
            background-color: #eee;

        }

        .banner-item {
            margin-bottom: 20px;
            background-color: #eee;
            padding: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        .banner-img {
            max-width: 80%;
            height: auto;
            border-radius: 5px;
            margin-top: 20px;
            align-items: center;
        }

        .btn-add-banner {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
  <h1>List of Added Banners</h1>

    <div class="container">

        <div style="background-color: #eee; padding: 20px;">
            <a href="/admin/add-banner-page" class="btn btn-success btn-add-banner">Add Banner</a>

            <% if (banners.length > 0) { %>
                <ul class="banner-list">
                    <% banners.forEach(banner => { %>
                        <li class="banner-item">
                            <img src="/banner/<%= banner.image %>" alt="Banner Image" class="banner-img">
                            <a href="/admin/delete-banner/<%= banner._id %>" class="btn btn-danger mt-3">Delete</a>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No banners added yet.</p>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap JS (Optional - If needed) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
