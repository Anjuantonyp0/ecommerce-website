
<%- include('../partials/admin/adminHeader') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Order management</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/css/bootstrap.min.css"
        integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
        crossorigin="anonymous">
        <!-- Include SweetAlert CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css">

<!-- Include SweetAlert JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>

    
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }
        h2{
            margin-bottom:20px
        }
        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);

        }
        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #dee2e6;
        }
        th {
            background-color: #343a40;
            color: #fff;
        }
        tbody tr:hover {
            background-color: #f5f5f5;
        }
        .order-details-btn {
            padding: 5px 10px;
            text-decoration: none;
            background-color: #28a745;
            color: #fff;
            border-radius: 3px;
        }
        .order-details-btn:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <h1>Order Management</h1>
    <section style="background-color: #eee;">

    <div class="container py-5" background="#fff">
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Ordered Status</th>
                    <th>Ordered Date</th>
                    <th>Total Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (order && order.length > 0) { %>
                    <% order.forEach(odr => { %>
                        <tr>
                            <td><%= odr._id %></td>
                            <td><%= odr.status %></td>
                            <td><%= odr.createdAt.toLocaleDateString() %></td>
                            <td>â‚¹<%= odr.totalAmount %></td>
                            <td><a href="/admin/view-order-details-admin/<%= odr._id %>" class="order-details-btn">View Details</a></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center">Order not found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
    <script>
        
    // Function to update order status
    function updateOrderStatus(orderId) {
        fetch('/updateOrderStatus', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ orderId: orderId, orderStatus: 'Shipped' }) // Change 'Shipped' to the desired status
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Failed to update order status');
            }
            return response.json();
        })
        .then(data => {
            // Handle response data if needed
            console.log('Order status updated successfully:', data);
        })
        .catch(error => {
            console.error('Error updating order status:', error.message);
        });
    }

    // Example usage: call updateOrderStatus function with orderId
    // updateOrderStatus('your_order_id_here');
</script>

</body>
</html>
