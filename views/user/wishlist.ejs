<style>
/* Reset CSS */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Open Sans', sans-serif;
    background-color: #fff;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px;
}

.main-heading {
    font-size: 20px;
    margin-bottom: 20px;
    color: #212529;
}

/* .table-wishlist {
    width: 100%;
    background-color: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
} */

.table-wishlist table {
    width: 100%;
}

.table-wishlist thead {
    background-color: #f8f9fa;
}

.table-wishlist th, .table-wishlist td {
    padding: 20px;
    text-align: left;
}

.table-wishlist th {
    color: #212529;
}

.table-wishlist tr:nth-child(even) {
    background-color: #f8f9fa;
}

.table-wishlist tr:hover {
    background-color: #e9ecef;
}

.img-item img {
    width: 72px;
    height: auto;
    border-radius: 8px;
}

.name-item {
    font-size: 16px;
    color: #212529;
}

.price {
    font-weight: 600;
    color: #007bff;
}

.in-stock-box {
    background-color: #28a745;
    color: #fff;
    border-radius: 25px;
    padding: 6px 15px;
    display: inline-block;
    font-size: 14px;
}

.small-btn {
    border-radius: 25px;
    background-color: #007bff;
    color: #fff;
    padding: 8px 20px;
    border: none;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.3s ease;
}

.small-btn:hover {
    background-color: #0056b3;
}

.trash-icon {
    font-size: 20px;
    color: #dc3545;
    cursor: pointer;
}

.trash-icon:hover {
    color: #c82333;
}
</style>

</head>
<body>

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                    <span>Whishlist</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<section class="shop-cart spad">
    <div class="table-wishlist">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="wishlist__table">
<table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th> Price</th>
                    <th>Stock Status</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample row for demonstration purposes -->
               <% if (product) { %>
                <% product.items.forEach(item => { %>
                    <tr>
                        <td>
                            <div class="img-item">
                                <img src="uploads/<%= item.product.image[0].url %>" alt="Product Image">
                                
                            </div>
                            <div class="name-item">
                                <%= item.product.name %>
                              </div>                    </td>
                              <td width="15%" class="price">‚Çπ<%= item.product.price %>.00</td>
                              <td><span class="in-stock-box"><% if (item.product.stock >= 1) { %>
                                In Stock
                            </span></td>
                              <% } else { %>
                                Out of Stock
                              <% } %>
                              
                        <td>
    
                            <a href="/whishlist-to-cart/<%= item.product._id %>"><button class="small-btn" type="submit">Add to Cart</button></a>
                  
                         </td>
                        <td class="text-center">
                           <a href="/remove-wishlist/<%= item.product._id %>"> <span class="trash-icon">üóëÔ∏è</span></a>
                        </td>
                    </tr>
                <% }) %>
               <% }else{ %>
                <tr>.</tr>
                <%}%>
                <!-- End of sample row -->
            </tbody>
        </table>
    </div>
</div>
</div>
</div>
</div>
</section>
 
                    
                    <div class="footer__copyright__text">
                    </div>
                
</body>
</html>
